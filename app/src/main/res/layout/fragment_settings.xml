<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/backgr1"
              android:padding="10dp"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@color/white" android:padding="10dp">
    <TextView
            android:id="@+id/stop_direction_direction"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/settings_distance"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/distanceSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dsb_min="100"
            app:dsb_max="2000"
            app:dsb_indicatorColor="@color/white"
            app:dsb_progressColor="@color/blue"
            app:dsb_trackColor="@color/gray"
            app:dsb_indicatorTextAppearance="@style/FloaterTextAppearance"/>
    </LinearLayout>

</LinearLayout>