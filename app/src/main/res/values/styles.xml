<resources>


    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:dropDownListViewStyle">@style/myDropDownListViewStyle</item>
    </style>

    <style name="FloaterTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="viewPagerTitleStrip">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myDropDownListViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/white</item>
    </style>
</resources>
